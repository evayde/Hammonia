<GridPane  prefHeight="150.0" prefWidth="300.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ham.client.BasicModalComponent">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    <stylesheets>
        <URL value="@BasicModalView.css"/>
    </stylesheets>
   <children>
      <VBox styleClass="modalBox" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3">
          <children>
              <Label text="Test" styleClass="h1"></Label>
          </children>
        <padding>
           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
      </VBox>
      <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="1">
        <children>
            <Button onAction="#closeModalAction" fx:id="modalCloseButton" styleClass="form-button" text="OK"></Button>
        </children>
      </VBox>
   </children>
</GridPane>
